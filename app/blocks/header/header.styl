.header
	display block
	text-align center
	height 80px
	font-size 18px
	color $text-gray
	
	+below($tablet)
		display none
	
	&__inner
		position relative

	&__logo
		position absolute
		left 120px
		top 32px
		font-weight 500

	&__nav
		display inline-block
		font-size 0
		
	&__item
		display inline-block
		margin 0 25px
		
	&__link
		display block
		line-height 80px
		font-size 18px
		color $text-gray
		text-decoration none
		position relative
		
		&:before
			position absolute
			bottom 4px
			right 50%
			left 50%
			height 4px
			background $c-orange
			transition ease .3s all
			content ''
			
		&:hover
			&:before
				left -30px
				right -30px
				
	&__phone
		position absolute
		right 120px
		top 32px
		font-weight 600