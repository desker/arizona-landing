.header
	display block
	text-align center
	height 80px
	font-size 18px
	color $text-gray
	
	+below($tablet)
		position absolute
		z-index 10
		left 0
		top 0
		right 0
	
	&__inner
		position relative

	&__logo
		position absolute
		left 120px
		top 32px
		font-weight 500
		
		+below($tablet)
			left 30px
			top 16px
			font-size 0
			width 36px
			height 36px
			border-radius 50%
			overflow hidden
			background-color #F9F9F9

	&__nav
		display inline-block
		font-size 0
		
		+below($tablet)
			display none
		
	&__item
		display inline-block
		margin 0 25px
		
	&__link
		display block
		line-height 80px
		font-size 18px
		color $text-gray
		text-decoration none
		position relative
		
		&:before
			position absolute
			bottom 4px
			right 50%
			left 50%
			height 4px
			background $c-orange
			transition ease .3s all
			content ''
			
		&:hover
			&:before
				left -30px
				right -30px
				
	&__phone
		position absolute
		right 120px
		top 32px
		font-weight 600
		color $text-gray
		text-decoration none
		
		+below($tablet)
			right 30px
			top 16px
			line-height 36px
			color $c-white