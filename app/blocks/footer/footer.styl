.footer
	display block
	background $text
	padding 70px 0 140px
	
	+below($tablet)
		padding 25px 0 36px
	
	&__container
		width 100%
		max-width 1140px
		margin-x auto
		
	&__nav-block
		display inline-block
		margin-right 148px
		vertical-align middle
		
		+below($laptop)
			margin-right 100px
			
			&:first-child
				margin-left 20px
		
		+below($tablet)
			display block
			padding 0 0 0 25px
			margin-bottom 20px
			width auto
			margin-left 0
			margin-right 0
			
			&:first-child
				margin-left 0

		
		&:last-child
			margin-right 0
			margin-left -40px
			
			+below($tablet)
				margin-left 0
				text-align center
		
	&__header
		color #F67354
		font-size 24px
		line-height 24px
		margin-bottom 52px
		
		+below($tablet)
			margin-bottom 10px
		
	&__link
		display block
		text-decoration none
		margin-top 29px
		color $c-white
		line-height 23px
		font-size 13px
		
		+below($tablet)
			margin-top 0
		
	&__icon
		width 13px
		height 13px
		vertical-align middle
		margin-right 17px