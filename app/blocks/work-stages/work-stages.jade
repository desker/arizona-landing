include ../button/button
include ../title/title
include ../subtitle/subtitle
include ../icon/icon

mixin work-stages(stages)
	- var stages = stages || []
	+b.work-stages#about-us&attributes(attributes)
		+title._light Этапы работы
		+subtitle._light Все продумано до мелочей
		+e.scale
			each stage, i in stages
				+e.stage(class=(i + 1) % 2 === 0 ? '_even' : '_odd' class=i <= 3 ? 'visible' : '')
					+e.num(style=`color: ${stage.color};`)= `Шаг ${i + 1}`
					+e.divider(style=`background-color: ${stage.color};`)
					+e.text= stage.text

		+e.expand-outer.js-work-expand
			+icon('arrow_down').expand

		+e.button
			+button({ href: '#contact-form' }).js-show-modal Запросить портфолио