.work-stages
	display block
	padding 60px 0 170px
	background #2D2D2D
	
	+below($tablet)
		padding 25px 0 35px
	
	&__scale
		position relative
		width 740px
		padding-y 90px
		margin-x auto
		margin-top 110px
		
		+below($tablet)
			width auto
			overflow hidden
			padding-y 30px
			margin-x 30px
			margin-top 20px
		
		&:before
			position absolute
			left 50%
			top 0
			bottom 0
			width 10px
			margin-left -5px
			background linear-gradient(180deg, #FF0F00 0%, #FFF500 100%)
			content ''
			
			+below($tablet)
				left auto
				right 0
				bottom 0
				width 6px
			
		&:after
			top 100%
			margin-top -1px
			left 50%
			border solid transparent
			content ''
			height 0
			width 0
			position absolute
			pointer-events none
			border-color transparent
			border-top-color #FFF400
			border-width 5px
			border-top-width 10px
			margin-left -5px
			
			+below($tablet)
				left auto
				right 0
				border-width 3px
				border-top-width 6px
			
	&__stage
		&_odd
			margin-left 50%
			padding-left 5px
			
			+below($tablet)
				margin-left 0
				padding-left 0
				padding-right 6px
				text-align right
				
				.work-stages__num
					padding-left 0
					padding-right 20px
					
				.work-stages__divider
					margin-left auto
			
		&_even
			width 50%
			padding-right 6px
			text-align right
			
			+below($tablet)
				width auto
				
			
			.work-stages__num
				padding-left 0
				padding-right 20px
				
			.work-stages__divider
				margin-left auto
				
		+below($tablet)
			display none
			&.visible
				display block

	&__num
		white-space nowrap
		padding-left 30px
		display inline-block
		font-weight 600
		font-size 18px
		height 25px
		letter-spacing -0.7px
		
		+below($tablet)
			padding-left 0
			font-size 14px
			height 20px
		
	&__divider
		width 80px
		height 1px
		
		+below($tablet)
			width 60px
		
	&__text
		color $c-white
		font-size 11px
		line-height 15px
		padding 15px 30px 100px
		
		+below($tablet)
			padding 10px 15px 40px

	&__button
		padding-top 150px
		text-align center
		
		+below($tablet)
			padding-top 0
			
	&__expand-outer
		padding 30px 0
		text-align center
		cursor pointer
		display none
		
		+below($tablet)
			display block
		
	&__expand
		width 34px
		height 10px