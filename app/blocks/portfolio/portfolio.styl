.portfolio
	display block
	height 1180px 
	background-image url('/images/portfolio_bg.jpg')
	background-position center bottom
	background-repeat no-repeat
	position relative
	
	&:before
		z-index -1
		position absolute
		left 0
		top -620px
		right 0
		height 780px
		background linear-gradient(180deg, #FFFFFF 0%, #FBFBFB 47.4%, #FBFBFB 58.64%)
		content ''
	
	&__carousel
		width 100%
		max-width 1130px
		margin-x auto
		margin-top 95px
		
	&__item
		padding 15px 8px 25px
		
	&__content
		width 360px
		height 522px
		background-color $c-white
		box-shadow 0px 4px 24px rgba(205, 205, 205, 0.5)
		
		+below($laptop)
			margin-x auto
			width 320px
			
		+below($tablet)
			width 300px

		+below($mobile)
			width 260px

	&__preview
		overflow hidden
		height 300px
	
	&__name
		margin 42px 0 5px 42px
		font-size 24px
		color $text-gray
		line-height 28px
		font-weight 700
		
	&__desc
		margin-left 42px
		width 180px
		height 35px
		color $c-orange
		font-size 11px
		line-height 13px
		font-style italic
		font-weight 300
	
	&__task
		margin-top 8px
		margin-x 42px
		color $text-gray
		font-size 16px
		line-height 20px
		font-weight 300
		
	&__nav
		margin-top 75px
		text-align center
		font-size 0
		li
			display inline-block
			margin 0 7px
			&.slick-active button
				background-color $c-orange

		button
			border none
			width 12px
			height 12px
			border-radius 100%
			background-color $c-gray
			
	&__button
		text-align center
		margin-top 50px