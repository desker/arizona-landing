.intro
	display block
	padding-bottom 200px
	
	+below($mobile)
		padding-bottom 60px

	&__image
		width 100%
		height 700px
		background-image url('/images/header_image.jpg')
		background-position top center
		position relative
		z-index 1
		
		+below($mobile)
			height 500px

		&:after
			position absolute
			z-index 2
			left 0
			top 0
			right 0
			bottom 0
			background linear-gradient(109.8deg, rgba(245, 173, 4, 0.7) -32.98%, rgba(246, 115, 84, 0.7) 70.33%)
			content ''
	
	&__content
		position relative
		z-index 3	
		color $c-white
		text-align center

	&__header
		font-size 48px
		padding-top 120px
		padding-bottom 20px
		
		+below($tablet)
			font-size 37px
			
		+below($mobile)
			width 250px
			margin-x auto
		
	&__text
		width 100%
		max-width 850px
		margin-x auto
		font-size 28px
		letter-spacing -0.5px
		
		+below($tablet)
			font-size 18px
			
		+below($mobile)
			width 250px
		
	&__button
		margin-x auto
		text-align center
		padding-top 30px
		
	&__laptop
		position absolute
		bottom -470px
		left 50%
		margin-left -433px
		z-index 5
		
		+below($tablet)
			display none
		
	&__about
		margin-top 310px
		text-align center
		
		+below($tablet)
			margin-top 20px
		
	&__about-header
		color $c-orange
		font-size 22px
		font-weight 600
		
		+below($mobile)
			font-size 16px
		
	&__company-name
		font-size 38px
		color $text-gray
		line-height 68px
		
		+below($mobile)
			font-size 22px
			line-height 42px
		
	&__about-text
		color $text-gray
		font-size 22px
		font-weight 300
		width 100%
		max-width 850px
		margin-x auto
		line-height 30px
		
		+below($tablet)
			padding 0 20px
			box-sizing border-box
		
		+below($mobile)
			font-size 14px
			line-height 18px