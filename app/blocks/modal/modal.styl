.modal
	position fixed
	left 0
	top 0
	right 0
	bottom 0
	text-align center
	display none
	opacity 0
	transition ease .3s opacity
	white-space nowrap
	font-size 0
	
	&_visible
		opacity 1
		z-index 100
	
	&:before
		width 1px
		height 100%
		display inline-block
		vertical-align middle
		content ''
		margin-left -1px

	&__overlay
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		background-color rgba(#000, .4)
		
	&__content
		position relative
		background-color $c-white
		padding 50px 95px 55px
		display inline-block
		vertical-align middle
		text-align left
		white-space normal
		
		+below($tablet)
			padding 30px