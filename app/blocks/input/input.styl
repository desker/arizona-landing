.input
	display block
	padding-top 24px
	position relative
	
	& + .input
		margin-top 10px
	
	&__field
		display block
		width 100%
		height 36px
		padding 0
		border none
		border-bottom 2px solid rgba(#000, .3)
		font-family Montserrat
		font-weight 300
		font-size 24px

		&:focus
			border-bottom-color #ED5736
			
			& + .input__label
				color #ED5736
			
	&__label
		position absolute
		left 0
		top 0
		line-height 24px
		font-size 14px
		color rgba(#000, .3)