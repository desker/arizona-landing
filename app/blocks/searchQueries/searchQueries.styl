.searchQueries
	display block
	width 100%
	overflow hidden
	padding-y 75px
	background $text
	
	+below($tablet)
		padding-y 35px
	
	&__blocks
		display block
		margin-top 110px
		width 100%
		max-width 1120px
		margin-x auto
		text-align justify
		
		+below($tablet)
			margin-top 36px
		
		&:after
			display inline-block
			width 100%
			height 1px
			content ''
	
	&__block
		position relative
		display inline-block
		width 200px
		height 100px
		padding 15px 17px 0 15px
		vertical-align top
		font-size 11px
		line-height 15px
		text-align left
		color $c-white
		
		+below($tablet)
			display block
			margin-x auto
			margin-top 17px
		
		&:before
			position absolute
			left 15px
			right 15px
			top 0
			bottom 0
			content ''
			border-top 1px solid rgba(#fff, .5)
			border-bottom 1px solid rgba(#fff, .5)
			
		&:after
			position absolute
			top 15px
			bottom 15px
			left 0
			right 0
			content ''
			border-right 1px solid rgba(#fff, .5)
			border-left 1px solid rgba(#fff, .5)
			
	&__query
		width 1000px
		margin-top 65px
		margin-x auto
		
		+below($tablet)
			display none
	
	&__query-header
		padding-bottom 15px
		
	&__select
		display block
		width 100%
		height 35px
		padding-left 30px
		border-radius 4px
		font-size 14px
		font-family 'Montserrat', sans-serif
		box-shadow 1px 1px 5px rgba(0, 0, 0, 0.15)
		border 0.75px solid #9E9E9E
		background $c-white
		
	&__images
		margin-top 480px
		padding-bottom 150px
		text-align justify

		&:after
			display inline-block
			width 100%
			height 1px
			content ''
			
	&__image-outer
		width 222px
		height 110px
		display inline-block
		vertical-align top
		position relative
		z-index 6
	
		&_selected
			z-index 4
			
			.searchQueries__image-inner
				top -330px
				left -300px
				width 845px
				height 520px
		
	&__image-inner
		position absolute
		width 100%
		height 110px
		overflow hidden
		box-shadow 0px 4px 24px rgba(205, 205, 205, 0.5)
		top 0
		left 0
		transition ease 1s all
		
	&__image
		width 100%
		height auto
		
	&__button
		text-align center
		
		+below($tablet)
			margin-top 30px